@model Supermaket.Areas.Admin.Models.ProductModels

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
}

<div class="row d-flex justify-content-center align-items-center">
    <!-- Left column -->
    <div class="col-md-6">
        <!-- General form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h2 class="card-title text-center w-100">
                    <i class="fas fa-box mr-2"></i> <strong>Add Product</strong>
                </h2>
            </div>


            <!-- /.card-header -->
            <!-- Form start -->
            <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <!-- Product Name -->
                    <div class="form-group">
                        <label asp-for="ProductName"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Quantity In Stock -->
                    <div class="form-group">
                        <label asp-for="QuantityInStock"></label>
                        <input asp-for="QuantityInStock" type="number" class="form-control" />
                        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                    </div>

                    <!-- Discount -->
                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" type="number" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                    <!-- Category -->
                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" class="form-control">
                            <option value="">-- Select Category --</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                if (category.Status != "Deleted") 
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Brand -->
                    <div class="form-group">
                        <label asp-for="BrandId"></label>
                        <select asp-for="BrandId" class="form-control">
                            <option value="">-- Select Brand --</option>
                            @foreach (var brand in ViewBag.Brands)
                            {
                                if (brand.Status != "Deleted") 
                                {
                                    <option value="@brand.BrandId">@brand.BrandName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>


                    <!-- Product Image -->
                    <div class="form-group">
                        <label asp-for="ProductImage"></label>
                        <input asp-for="ProductImage" type="file" class="form-control" accept=".jpg, .png, .jpeg" />

                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="">-- Select Status --</option>
                            <option value="Available">Available</option>
                            <option value="New Product">New Product</option>
                            <option value="Out of Stock">Out of Stock</option>
                            <option value="Discontinued">Discontinued</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer d-flex justify-content-end">
                    <a href="@Url.Action("Index", "ProductAdmin", new { area = "Admin" })" class="btn btn-secondary">Back</a>
                    <button type="reset" class="btn btn-danger  ml-2">Cancel</button>
                    <button type="submit" class="btn btn-primary  ml-2">Confirm</button>
                  

                </div>

            </form>
        </div>
    </div>
    <!-- /.row -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
