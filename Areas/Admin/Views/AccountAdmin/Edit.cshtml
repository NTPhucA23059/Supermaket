@model Supermaket.Areas.Admin.Models.AccountModels

@{
    ViewData["Title"] = "Edit Account";
}

<div class="row d-flex justify-content-center align-items-center">
    <!-- Left column -->
    <div class="col-md-6">
        <!-- General form elements -->
        <div class="card card-warning">
            <div class="card-header">
                <h2 class="card-title text-center w-100">
                    <i class="fas fa-user mr-2"></i> <strong>Edit Account</strong>
                </h2>
            </div>

            <!-- Form start -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data" asp-route-id="@Model.AccountId">
                <input type="hidden" asp-for="AccountId" />

                <div class="card-body">
                    <!-- Username (Read-only) -->
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" readonly />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Contact Number (Read-only) -->
                    <div class="form-group">
                        <label asp-for="ContactNumber"></label>
                        <input asp-for="ContactNumber" class="form-control" readonly />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Role -->
                    <div class="form-group">
                        <label asp-for="Role"></label>
                        <select asp-for="Role" class="form-control">
                      
                            <option value="Customer" select=@(Model.Role == "User" ? "selected" : "")>Customer</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="Active" select=@(Model.Status == "Active" ? "selected" : "")>Active</option>
                            <option value="Inactive" select=@(Model.Status == "Inactive" ? "selected" : "")>Inactive</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">                   
                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <div>
                                <img src="~/Image/Account/@Model.ProfilePicture" alt="Current Profile Picture" width="100" />
                            </div>
                        }
                    </div>

                    <!-- Credit Card Number -->
                    <div class="form-group">
                        <label asp-for="CreditCardNumber"></label>
                        <input asp-for="CreditCardNumber" type="text" class="form-control" />
                        <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                    </div>

                    <!-- Credit Card Expiry -->
                    <div class="form-group">
                        <label asp-for="CreditCardExpiry"></label>
                        <input asp-for="CreditCardExpiry" type="text" class="form-control" />
                        <span asp-validation-for="CreditCardExpiry" class="text-danger"></span>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer d-flex justify-content-end">
                    <a href="@Url.Action("Index", "AccountAdmin", new { area = "Admin" })" class="btn btn-secondary ml-2">Back</a>

                    <button type="reset" class="btn btn-danger ml-2">Cancel</button>
                    <button type="submit" class="btn btn-warning ml-2">Save Changes</button>

                </div>

            </form>
        </div>
    </div>
    <!-- /.row -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
