<a href="#" class="brand-link">
    <img src="~/Admin/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">Helllo Admin </span>
</a>

<!-- Sidebar -->
<div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <a href="@Url.Action("Profile", "AccountAdmin", new { area = "Admin" })" class="brand-link">
                <img src="~/Admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </a>
          
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="#" class="d-block">Hello, @User.Identity.Name</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "AccountAdmin", new { area = "Admin" })" class="d-block">Login</a>
                }
           
        </div>
       
    </div>

    <!-- SidebarSearch Form -->
    <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <!-- Dashboard Menu -->
            <li class="nav-item menu-open">
                <a href="@Url.Action("Index", "Admin")" class="nav-link active">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    <p> Dashboard </p>
                </a>
            </li>

            <!-- Category Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "CategoryAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-cogs"></i>
                    <p> Category </p>
                </a>
            </li>

            <!-- Brand Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "BrandAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-tags"></i>
                    <p> Brand </p>
                </a>
            </li>

            <!-- Product Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "ProductAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-box"></i>
                    <p> Product </p>
                </a>
            </li>

            <!-- Promotion Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "PromotionAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-gift"></i>
                    <p> Promotion </p>
                </a>
            </li>

            <!-- Account Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "AccountAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-users"></i>
                    <p> Account </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "OrderAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-truck"></i>
                    <p> Order</p>
                </a>
            </li>
            <!-- Bill Menu -->
            <li class="nav-item">
                <a href="@Url.Action("Index", "BillAdmin", new { area = "Admin" })" class="nav-link">
                    <i class="nav-icon fas fa-file-invoice"></i>
                    <p> Bill </p>
                </a>
            </li>
            <!-- Login / Logout -->
            @if (User.Identity.IsAuthenticated)
            {
                    <li class="nav-item">
                        <a href="@Url.Action("Logout", "User")" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p> Logout </p>
                        </a>
                    </li>
            }
            else
            {
                    <li class="nav-item">
                        <a href="@Url.Action("Login","User")" class="nav-link">
                            <i class="nav-icon fas fa-sign-in-alt"></i>
                            <p> Login </p>
                        </a>
                    </li>
            }
        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>
