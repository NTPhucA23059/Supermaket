@model Supermaket.Areas.Admin.Models.CategoryModels

@{
    ViewData["Title"] = "Edit Category";
}

<div class="row d-flex justify-content-center align-items-center">
    <!-- Left column -->
    <div class="col-md-6">
        <!-- General form elements -->
        <div class="card card-warning">
            <div class="card-header">
                <h2 class="card-title text-center w-100">
                    <i class="fas fa-edit mr-2"></i> <strong>Edit Category</strong>
                </h2>
            </div>

            <!-- Form start -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data" asp-route-id="@Model.CategoryId">
                <input type="hidden" asp-for="CategoryId" />

                <div class="card-body">
                    <!-- Category Name -->
                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" readonly />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="Available" selected="@Model.Status == " Available"">Available</option>
                            <option value="Discontinued" selected="@Model.Status == " Discontinued"">Discontinued</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer d-flex justify-content-end">
                    <a href="@Url.Action("Index", "CategoryAdmin", new { area = "Admin" })" class="btn btn-secondary">Back</a>

                    <button type="reset" class="btn btn-danger  ml-2">Cancel</button>
                    <button type="submit" class="btn btn-warning ml-2">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
