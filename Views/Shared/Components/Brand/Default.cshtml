@model IEnumerable<Supermaket.Models.BrandModel>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Brands</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-brand="@item.BrandId">
                            <i class="fas fa-apple-alt me-2"></i>@item.BrandName
                        </a>
                        <span>@item.Quantity</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>