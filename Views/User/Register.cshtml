@model Supermaket.Models.Register

@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutLogin";
}

<div class="register-box">
    <div class="card">
        <div class="card-body register-card-body">
            <h2 class="login-box-msg">Register <span asp-validation-summary="All" class="text-danger"></span></h2>

            <!-- Form đăng ký -->
            <form asp-action="Register" asp-controller="User" method="post">

                <!-- Username -->
                <div class="input-group mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>

                <!-- Email -->
                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <!-- Contact Number -->
                <div class="input-group mb-3">
                    <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-phone"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="ContactNumber" class="text-danger"></span>

                <!-- Password -->
                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <!-- Confirm Password -->
                <div class="input-group mb-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <!-- Address -->
                <div class="input-group mb-3">
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>

                <!-- Credit Card Number -->
                <div class="input-group mb-3">
                    <input asp-for="CreditCardNumber" type="text" class="form-control" placeholder="Credit Card Number" />
                </div>
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>

                <!-- Credit Card Expiry -->
                <div class="input-group mb-3">
                    <input asp-for="CreditCardExpiry" type="text" class="form-control" placeholder="Credit Card Expiry" />
                </div>
                <span asp-validation-for="CreditCardExpiry" class="text-danger"></span>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                            <label for="agreeTerms">
                                I agree to the <a href="#">terms</a>
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
            </form>

            <a href="@Url.Action("Login", "User")" class="text-center">I already have a membership</a>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
