@model Supermaket.Models.Register

<div class="container py-5">
    <h1 class="text-center text-success mb-4">User Profile</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-lg">
                <div class="card-body text-center">
                    <!-- Ảnh đại diện người dùng -->
                    <img id="profilePicture" src="@Url.Content("~/Image/Account/" + Model.ProfilePicture)" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">

                    <!-- Hiển thị thông tin người dùng -->
                    <form>
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.AccountId" />

                        <!-- Hiển thị lỗi tổng thể -->
                        <div class="text-danger">
                            <span asp-validation-summary="All"></span>
                        </div>

                        <!-- Username -->
                        <div class="form-group mt-3">
                            <label for="Username">Username</label>
                            <input type="text" class="form-control mb-2" id="Username" name="Username" value="@Model.Username" readonly>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control mb-2" id="Email" name="Email" value="@Model.Email" readonly>
                        </div>

                        <!-- Contact Number -->
                        <div class="form-group">
                            <label for="ContactNumber">Contact Number</label>
                            <input type="text" class="form-control mb-2" id="ContactNumber" name="ContactNumber" value="@Model.ContactNumber" readonly>
                        </div>

                        <!-- Address -->
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" class="form-control mb-2" id="Address" name="Address" value="@Model.Address" readonly>
                        </div>

                        <div class="form-group">
                            <label for="CreditCardNumber">Credit Card Number</label>
                            <input type="text" class="form-control mb-2" id="CreditCardNumber" name="CreditCardNumber" value="@Model.CreditCardNumber" readonly>
                        </div>

                        <div class="form-group">
                            <label for="CreditCardExpiry">Credit Card Expiry</label>
                            <input type="text" class="form-control mb-3" id="CreditCardExpiry" name="CreditCardExpiry" value="@Model.CreditCardExpiry" readonly>
                        </div>

                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="text" class="form-control mb-2" id="Password" value="**********" readonly>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
